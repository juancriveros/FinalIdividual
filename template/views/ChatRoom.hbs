{{>header}}
  <style>
    body {
      display: flex;
      flex-direction: column;
    }
    .members-count,
    .members-list,
    .messages {
      border: 1px solid #e4e4e4;
      padding: 15px;
      margin-bottom: 15px;
    }
    .messages {
      flex-shrink: 1;
      overflow: auto;
      max-height: 500px;
    }
    .message {
      padding: 5px 0;
    }
    .message .member {
      display: inline-block;
    }
    .member {
      padding-right: 10px;
      position: relative;
    }
    .message-form {
      display: flex;
      flex-shrink: 0;
    }
    .message-form__input {
      flex-grow: 1;
      border: 1px solid #dfdfdf;
      padding: 10px 15px;
      font-size: 16px;
    }
    .message-form__button {
      margin: 10px;
    }
  </style>
<div class="jumbotron">
	<div class="container">
		<header>
			<h1>Chat Room </h1>
		</header>
	</div>
</div> 

<div class="members-count" id="numeroUsuarios"></div>
<div class="members-list" id="listaUsuarios"></div>
<div class="messages" id="chatMessages"></div>
<form class="message-form" onsubmit="return false;" id="chatForm">
	<input class="message-form__input" placeholder="Escribe un mensaje.." autocomplete="off" type="text" id="chatText" required/>
	<input class="message-form__button" value="Send" type="submit"  />
</form>

<script src="socket.io/socket.io.js"></script>
<script src="/js/socket.js"></script>
{{>footer}}